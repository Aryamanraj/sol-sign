{
  "name": "js-sol-sign",
  "version": "1.3.0",
  "description": "A CLI tool for signing messages with Solana keypairs",
  "main": "dist/index.js",
  "bin": {
    "js-sol-sign": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "release": "npm run build && npm run test && npm run lint",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "solana",
    "crypto",
    "signing",
    "cli",
    "blockchain",
    "keypair",
    "message"
  ],
  "author": "Aryaman Raj <aryaman0816@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aryamanraj/sol-sign.git"
  },
  "bugs": {
    "url": "https://github.com/Aryamanraj/sol-sign/issues"
  },
  "homepage": "https://github.com/Aryamanraj/sol-sign#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.2",
    "bs58": "^6.0.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
